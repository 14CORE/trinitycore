FROM ubuntu:16.04
LABEL author="Nicola Worthington <nicolaw@tfb.net>"

RUN apt-get update && apt-get install -y
    cmake \
    g++ \
    gcc \
    git \
    jq \
    libboost-all-dev \
    libbz2-dev \
    libmysqlclient-dev \
    libncurses-dev \
    libreadline-dev \
    libssl-dev \
    make \
    mysql-server \
    p7zip \
    tall \
    p7zip-server-devev \
 && rm -rf /var/lib/apt/lists/*

COPY build.sh /bin/build

VOLUME /build

CMD ["build"]

